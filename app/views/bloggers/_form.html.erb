<% if flash[:errors] %>
    <% flash[:errors].each do |error|%>
    <p><%= error %></p>
    <% end %>
<% end %>


<%= form_for @blogger do |f| %>

<%= f.label :name, "Name" %>
<%= f.text_field :name %>

<%= f.label :age, "Age" %>
<%= f.text_field :age %>

<%= f.label :bio, "Bio" %>
<%= f.text_area :bio %>

<%= f.submit "New Blogger"%>

<% end %>


