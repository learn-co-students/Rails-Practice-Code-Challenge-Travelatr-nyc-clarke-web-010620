<% if @errors %>
<% @errors.each do |e| %>
<%= @error %>
<% end  %>
<% end %>

<%= form_for @post do |f| %>
<%= f.label :blogger %>
<%= f.collection_select :blogger_id,@bloggers,:id, :name %>
<%= f.label :destination %>
<%= f.collection_select :destination_id, @destinations, :id, :name%>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :content %>
<%= f.text_area :content %>
<%= f.hidden_field :likes, :value => 0 %>
<%= f.submit %>
<% end %>

