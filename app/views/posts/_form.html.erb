<% if flash[:errors] %>
    <% flash[:errors].each do |error|%>
    <p><%= error %></p>
    <% end %>
<% end %>

<%= form_for @post do |f| %>

<%= f.label :title, "Title" %>
<%= f.text_field :title %>

<%= f.label :content, "Content" %>
<%= f.text_area :content %>

<%= f.label :blogger, "Blogger" %>
<%= f.collection_select(:blogger_id, @bloggers, :id, :name) %>

<%= f.label :destination, "Destination" %>
<%= f.collection_select(:destination_id, @destinations, :id, :name) %>

<%= f.submit "New Post"%>

<% end %>